// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

font-url = '/fonts/'
museoS = 'Museo-300'
museoN = 'Museo-500'
smuseoN = 'MuseoSans-500'
museoL = 'Museo-700'
arialN = 'Arial, Helvetica'
icons = 'icomoon'


fontFaces()
  @font-face
    font-family museoS
    src url(font-url + '27DC84_1_0.eot')
    src url(font-url + '27DC84_1_0.eot?#iefix') format('embedded-opentype'),url(font-url + '27DC84_1_0.woff') format('woff'),url(font-url + '27DC84_1_0.ttf') format('truetype'),url(font-url + '27DC84_1_0.svg#wf') format('svg')
    font-weight normal
    font-style normal

  @font-face 
    font-family museoN
    src url(font-url + '27DC84_2_0.eot')
    src url(font-url + '27DC84_2_0.eot?#iefix') format('embedded-opentype'),url(font-url + '27DC84_2_0.woff') format('woff'),url(font-url + '27DC84_2_0.ttf') format('truetype'),url(font-url + '27DC84_2_0.svg#wf') format('svg')
    font-weight normal
    font-style normal

  @font-face
    font-family museoL
    src url(font-url + '27DC84_0_0.eot')
    src url(font-url + '27DC84_0_0.eot?#iefix') format('embedded-opentype'),url(font-url + '27DC84_0_0.woff') format('woff'),url(font-url + '27DC84_0_0.ttf') format('truetype'),url(font-url + '27DC84_0_0.svg#wf') format('svg')
    font-weight normal
    font-style normal

  @font-face 
    font-family smuseoN
    src url(font-url + '27DC84_3_0.eot')
    src url(font-url + '27DC84_3_0.eot?#iefix') format('embedded-opentype'),url(font-url + '27DC84_3_0.woff') format('woff'),url(font-url + '27DC84_3_0.ttf') format('truetype'),url(font-url + '27DC84_3_0.svg#wf') format('svg')

  @font-face
    font-family icons
    src url(font-url + 'icomoon.eot')
    src url(font-url + 'icomoon.eot?#iefix') format('embedded-opentype'), url(font-url + 'icomoon.woff') format('woff'), url(font-url + 'icomoon.ttf') format('truetype'), url(font-url + 'icomoon.svg#icomoon') format('svg') 
    font-weight normal
    font-style normal  

fontStyle(family = museoN, Size = 12px, Color = #666, LineHeight = normal, TextShadow = false)
  font Size/LineHeight family, sans-serif
  color Color
  unless TextShadow == false
    text-shadow TextShadow 